  <select id="findByWhere"  resultMap="TrueBaseResultMap" >
    select ID,PARENT_ID,DEPT_ID,DEPT_NAME,DEPT_TYPE,CREATE_DATE,CLOSE_DATE,REMARK,STATUS,SORT_NO from DEPT_INFO
    <where>
      <if test="id !=null">
        and ID = #{id}
      </if>
      <if test="parentId !=null">
        and PARENT_ID = #{parentId}
      </if>
      <if test="deptId !=null">
        and DEPT_ID = #{deptId}
      </if>
      <if test="deptIdLike !=null">
        and DEPT_ID LIKE CONCAT(#{deptIdLike},'%')
      </if>
      <if test="deptIdList != null and deptIdList.size > 0">
        and DEPT_ID in
        <foreach item="item" index="index" collection="deptIdList" open="("
                 separator="," close=")">
          #{item}
        </foreach>
      </if>

      <if test="deptName !=null">
        and DEPT_NAME = #{deptName}
      </if>
      <if test="deptType !=null">
        and DEPT_TYPE = #{deptType}
      </if>
      <if test="createDate !=null">
        and CREATE_DATE = #{createDate}
      </if>
      <if test="closeDate !=null">
        and CLOSE_DATE = #{closeDate}
      </if>
      <if test="remark !=null">
        and REMARK = #{remark}
      </if>
      <if test="status !=null">
        and STATUS = #{status}
      </if>
      <if test="sortNo !=null">
        and SORT_NO = #{sortNo}
      </if>
    </where>
  </select>

  <select id="getDeptsByUserId" resultMap="deptMap">
    SELECT DISTINCT bmr.*, bur.USER_ID as USER_ID
     FROM USER_ROLE_REL bur
     LEFT JOIN ROLE_DEPT_REL brm ON bur.ROLE_ID = brm.ROLE_ID
     LEFT JOIN DEPT_INFO bmr ON brm.DEPT_ID = bmr.ID
    <where>
      bmr.PARENT_ID =0
      <if test='userId != 1'>
        AND bur.USER_ID = #{userId}
      </if>
        and bmr.status = 1
    </where>
  </select>

  <select id="selectDeptsByParentId" resultMap="deptMap">
    SELECT DISTINCT bmr.*, bur.USER_ID as USER_ID
     FROM USER_ROLE_REL bur
    LEFT JOIN ROLE_DEPT_REL brm ON bur.ROLE_ID = brm.ROLE_ID
    LEFT JOIN DEPT_INFO bmr ON brm.DEPT_ID = bmr.ID
    WHERE bur.USER_ID = #{USER_ID} AND bmr.PARENT_ID = #{ID}
    and bmr.status = 1
  </select>



